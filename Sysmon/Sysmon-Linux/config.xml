<Sysmon schemaversion="4.81">
  <EventFiltering>
    
    <RuleGroup name="" groupRelation="or">
      <ProcessCreate onmatch="exclude">
        <Image condition="contains">splunkd</Image>
        <Image condition="contains">splunk-optimize</Image>
        <Image condition="end with">/splunk</Image>
        <CommandLine condition="contains">/opt/splunkforwarder</CommandLine>

        <Image condition="contains">mintUpdate</Image>
        <Image condition="contains">cinnamon</Image>
        <Image condition="end with">/vmtoolsd</Image>
        <CommandLine condition="contains">cinnamon-screensaver</CommandLine>
        <CommandLine condition="contains">GIO_LAUNCHED_DESKTOP</CommandLine>
        <CommandLine condition="contains">dbus-daemon</CommandLine>
        
        <Image condition="end with">/cron</Image>
        <Image condition="end with">/anacron</Image>
        <CommandLine condition="contains">apt.systemd.daily</CommandLine>
        <CommandLine condition="contains">run-parts</CommandLine>
        <CommandLine condition="contains">loginctl</CommandLine>
        <CommandLine condition="contains">dpkg_lock_check</CommandLine>
        
        <CommandLine condition="contains">lesspipe</CommandLine>
        <CommandLine condition="contains">mesg n</CommandLine>
        <CommandLine condition="contains">sed -e</CommandLine>
        <CommandLine condition="contains">dircolors</CommandLine>
      </ProcessCreate>
    </RuleGroup>

    <RuleGroup name="" groupRelation="or">
      <NetworkConnect onmatch="include">
        <Image condition="end with">curl</Image>
        <Image condition="end with">wget</Image>
        <Image condition="end with">nc</Image>
        <Image condition="end with">netcat</Image>
        <Image condition="end with">ncat</Image>
        <Image condition="end with">ssh</Image>
        <Image condition="end with">python</Image>
        <Image condition="end with">python3</Image>
      </NetworkConnect>
    </RuleGroup>

  </EventFiltering>
</Sysmon>
